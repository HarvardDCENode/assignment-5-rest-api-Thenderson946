extends layout 

block content
    .col-md-6.col-md-offset-4.m-5
        if flashMsg.length > 0
            .alert.alert-danger #{flashMsg}
        form(action="createListing" method="POST" enctype="multipart/form-data")
            .form-group.m-2
                label Brand:
                input.form-control(type='text', name='brand', placeholder='Brand', required='true')
            .form-group.m-2
                label Model:
                input.form-control(type='text', name='model', placeholder='Model', required='true')
            .form-group.m-2
                label Description:
                textarea.form-control(type='text', name='description', placeholder='Description', rows="3", required='true')
            .form-group.m-2
                label Price:
                input.form-control(type='number', name='price', placeholder='Price (USD $)', required='true')
            .form-group.m-2
                label Open to Trades?
                input.ms-2(type='checkbox', name='trades')
            .form-group.m-2
                label Image:
                input.form-control(type='file', name='image', placeholder='imfg', required='true')#image
            button.btn.btn-primary(type="submit", style="margin-top: 3rem; margin-left: 2rem")  
                | Create Listing