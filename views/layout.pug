// Layout represents the main navbar present across all pages
block variables
html
  head 
    title Gearheads INC
    link(rel='stylesheet' href='https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css')
    link(rel='stylesheet' href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css')
    link(rel='preconnect' href="https://fonts.googleapis.com")
    link(rel="preconnect" href="https://fonts.gstatic.com" crossorigin)
    link(href="https://fonts.googleapis.com/css2?family=Nabla&family=Roboto:ital,wght@0,100..900;1,100..900&display=swap" rel="stylesheet")
  script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js')
    
  body
  nav.navbar.navbar-expand-lg.bg-primary.text-white
    .container
      i.bi.bi-ear-fill.me-3(style='font-size: 3rem')
      a.navbar-brand(href='/' style='font-family: Nabla; font-size: 2rem') Gearheads INC

      #navbarNav.collapse.navbar-collapse
        ul.navbar-nav.ms-auto
          li.nav-item
            a.nav-link(href='/') View Listings
          if session.user
            li.nav-item
              a.nav-link(href='/createListing') Create Listing
            li.nav-item
              a.nav-link(href='/users/@yourUsernameHereEventually/messaging') Messages
            li.nav-item
              a.nav-link(href="/users/" + session.user.name) My Profile
            li.nav-item
              a.nav-link(href='/login/logout') Logout
          else
            li.nav-item
              a.nav-link(href='/login') Log in

  block content
